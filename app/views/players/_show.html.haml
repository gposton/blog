%tr{:id => "result_#{player.user_id}",:class => cycle('odd','even')}
  %td{:class => player.no_show? ? 'name strike' : 'name'}
    = (current_user.admin? || current_user.id == player.user_id) ? link_to(player.name, player.user) : player.name
  - if show_results? player
    %td= result(player, :buy_in)
    %td= result(player, :winnings)
  - if show_rsvp? player
    %td
      %span{:id => 'rsvp'}= result(player, :no_show, :type => :checkbox, :collection => ["Can't make it", "I'll be there"], :classes => 'rsvp')
      %span{:id => 'click_me', :style => 'font-weight:bold'}= "(Click to update)"
      :javascript
        $('#click_me').fadeIn(1000);
        $('#click_me').fadeOut(1000);
        $('#click_me').fadeIn(750);
        $('#click_me').fadeOut(750);
