%table
  %tr
    %td{:style => 'width: 100%; vertical-align: bottom;'}
      %div{:class => 'date'}
        = "Posted #{time_ago_in_words(@post.updated_at)} ago"
      %h1{:style => 'margin: 0 0 0 0;'}
        = @post.title
!= textilize(@post.content)
%div#comments
  %div#disqus_thread
  :javascript
    var disqus_shortname = 'glennposton'; // required: replace example with your forum shortname
    var discus_title = '#{@post.title}';

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
  %noscript
    Please enable JavaScript to view the
    = link_to 'comments powered by Disqus.', 'http://disqus.com/?ref_noscript'
  %a{:href => 'http://disqus.com', :class => 'dsq-brlink'}
    comments powered by 
    %span{:class => 'logo-disqus'}
      Disqus
