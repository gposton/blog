%table
  %tr
    %td{:style => 'width: 100%; vertical-align: bottom;'}
      %div{:class => 'date'}
        = "Posted #{time_ago_in_words(@post.updated_at)} ago"
      %h1{:style => 'margin: 0 0 0 0;'}
        = @post.title
    %td{:style => 'text-align: right;'}
      = link_to(image_tag('comment.png', :title => 'Add comment'), new_post_comment_path(@post), :title => 'Add comment')
= textilize(@post.content)
%div#comments
  = render :partial => 'comments/index', :locals => {:comments => @post.comments}




